<div class="forum-content">
  <div class="reply-form">
    <h1>Edit reply</h1>

    <% if @reply.errors.any? %>
      <div class="alert alert-danger">
        <h3>Please fix the following <%= pluralize(@reply.errors.count, "error") %> before continuing:</h3>

        <ul>
        <% @reply.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for [@reply.post.forum, @reply.post, @reply] do |f| %>
      <div class="field">
       <%= f.text_area :content, class: 'new-reply-content', placeholder: 'Reply content in here...' %>
      </div>
      <div class="actions">
        <%= f.submit 'Edit reply', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
