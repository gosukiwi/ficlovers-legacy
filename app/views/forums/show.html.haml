.container
  .forum-menu
    .forum-menu__categories
      = link_to 'Forums', forums_path, class: 'button'
      %span.forum-menu__button.dropdown{ data: { align: 'left' } }
        %a.button #{@forum.current_forum.name}
        .dropdown-content.dropdown-content--wide.vertical-menu
          - @forum.forums.each do |forum|
            - if forum == @forum.current_forum
              = link_to forum.name, forum, class: 'vertical-menu__item vertical-menu__item--active'
            - else
              = link_to forum.name, forum, class: 'vertical-menu__item'
      - if logged_in?
        %a.button.button--primary{ href: new_forum_post_path(@forum.current_forum) }
          %i.fa.fa-plus
          New Post

    .forum-menu__filters
      .button-group
        %a.button-group__item.button-group__item--active Latest
        %a.button-group__item Top

  %table.table
    %thead
      %tr
        %th.table--left Topic
        %th Replies
        %th Views
        %th Activity
    %tbody
      - @forum.current_forum_posts.each do |post|
        %tr
          %td
            - if post.pinned?
              %i.fa.fa-thumb-tack
            = link_to post.title, [post.forum, post]
          %td
            = post.replies.count
          %td
            = post.views
          - if post.replies.count > 0
            %td #{time_ago_in_words(post.replies.last.updated_at)} ago
          - else
            %td #{time_ago_in_words(post.updated_at)} ago

- unless @forum.current_forum_posts.empty?
  .pagination
    = will_paginate @forum.current_forum_posts
    .pagination-info
      = page_entries_info @forum.current_forum_posts, model: 'posts'

