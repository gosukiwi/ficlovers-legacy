<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>ficlovers</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag 'forums', media: 'all' %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <nav class="forum-navigation">
      <h3 class="logo"><%= link_to 'FicLovers', forums_path %></h3>
      <ul>
        <% if logged_in? %>
          <li><%= link_to current_user.name, current_user, class: 'user' %></li>
        <% else %>
          <li><%= link_to 'Login', login_path, class: 'user' %></li>
        <% end %>
        <li class="_dropdown">
          <a href="javascript:"><i class="fa fa-comment"></i></a>
          <div class="_dropdown-content forum-notifications">
            <p>You have no notifications right now.</p>
          </div>
        </li>
        <li><a href="#"><i class="fa fa-search"></i></a></li>
        <li><a href="#"><i class="fa fa-navicon"></i></a></li>
      </ul>
    </nav>

    <% if flash[:danger] %>
      <div class="danger"><%= flash[:danger] %></div>
    <% end %>

    <% if flash[:error] %>
      <div class="error"><%= flash[:error] %></div>
    <% end %>

    <div class="forum-content">
      <%= yield %>
    </div>

    <%= javascript_include_tag 'forums' %>
  </body>
</html>
