        %a{ href: logout_path, class: 'nav-link-icon', data: { method: :delete } }
          %i.fa.fa-sign-out.tooltip-item
            .tooltip Sign out
    - else
      %li 
        %a{ href: login_path, class: 'nav-link-primary' }
          %i.fa.fa-sign-in
