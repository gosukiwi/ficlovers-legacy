%nav.navigation
  %h3.logo 
    = link_to 'FicLovers', root_url
  %ul
    %li
      - if logged_in?
        %a.button.button--primary.button--small{ href: new_story_path }
          %i.fa.fa-pencil 
          Write
    %li
      %a.button.button--small{ href: forums_path }
        %i.fa.fa-comments 
        Forums
    %li
      %a.button.button--small{ href: search_stories_path(tags: '', category: 0) }
        %i.fa.fa-search
        Search
    - if logged_in?
      %li
        %a.button.button--small{ href: notifications_path }
          - if current_user.notifications.any?
            %span.button__notification
              = current_user.notifications.count
          %i.fa.fa-bell.tooltip-item
          Notifications
      - if admin?
        %li 
          %a.button.button--small{ href: admin_dashboard_path }
            %i.fa.fa-dashboard.tooltip-item
            Admin
      %li.dropdown
        %a.button.button--small
          %i.fa.fa-user
          = current_user.username
        .dropdown-content
          = link_to 'Dashboard', dashboard_index_path
          = link_to 'Profile', current_user
          = link_to 'Messages', private_messages_path
          = link_to 'Logout', logout_path, method: :delete
    - else
      %li 
        %a{ href: login_path, class: 'nav-link-primary' }
          %i.fa.fa-sign-in
          Login
