<h1>Search</h1>
<%= form_tag search_stories_path, method: :get do %>
  <div class="input">
    <%= label_tag :fandoms, 'Fandom' %>
    <%= text_field_tag :fandoms, params[:fandoms] %>
  </div>
  <div class="input">
    <%= label_tag :characters, 'Characters' %>
    <%= text_field_tag :characters, params[:characters] %>
  </div>
  <div class="input">
    <%= label_tag :category, 'Category' %>
    <%= select_tag :category, options_from_collection_for_select(@categories, "id", "name", params[:category]) %>
  </div>
  <%= submit_tag "Search", name: nil %>
<% end %>

<h2>Search Results</h2>
<table class="table">
<% @stories.each do |story| %>
  <tr>
    <td><%= story.title %></td>
    <td><%= story.summary %></td>
    <td><%= story.category.name %></td>
    <td><% story.tags.each do |tag| %>
      <span class="label label-default"><%= tag.name %></span>
    <% end %></td>
  </tr>
<% end %>
</table>
