<header class="header">
  <h1 class="header-title"><%= link_to 'Fic Lovers', stories_path %></h1>
</header>

<div class="new-story">
  <h1 class="title">Start Writing</h1>
  <%= form_for(@story) do |f| %>
    <% if @story.errors.any? %>
      <div class="alert alert-danger">
        <h2>Oops! <%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>
        <ul>
        <% @story.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="l-input-group">
      <div class="input">
        <%= f.label 'Title', { for: :title, class: 'input-label' } %>
        <%= f.text_field :title, { id: :title, class: 'input-text', placeholder: 'My Story Title' } %>
      </div>

      <div class="input">
        <%= f.label 'Summary', { for: :summary, class: 'input-label' } %>
        <%= f.text_area :summary, { id: :summary, class: 'input-textarea', placeholder: 'What is your story about?' } %>
      </div>

      <div class="input">
        <%= f.label 'Category', { for: :category, class: 'input-label' } %>
        <%= f.select :category_id, @categories.all.collect {|c| [c.name, c.id] }, {}, { class: 'input-select' } %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit 'Write', { class: 'btn btn-primary' } %>
      <%= link_to 'Cancel', current_user %>
    </div>
  <% end %>
</div>

