<div class="post">
  <h1 class="post-title"><%= @post.title %></h1>
  <div class="l-post-stack">
    <div class="stack author">
      <%= @post.user.name %>
    </div>
    <div class="stack content">
      <%= @post.content %>
    </div>
  </div>

  <p>
  <%= link_to 'Edit', edit_forum_post_path(@forum, @post) if policy(@post).update? %>
  <%= link_to 'Back to Forum', @forum %>
  </p>
</div>

<% @replies.each do |reply| %>
  <div class="reply">
    <%= reply.content %>
    <div class="actions">
      <%= link_to 'Edit', edit_forum_post_reply_path(@forum, @post, reply) if policy(reply).update? %>
    </div>
  </div>
<% end %>

<%= will_paginate @replies unless @replies.empty? %>

<div class="pagination-info">
  <%= page_entries_info @replies, model: 'replies' unless @replies.empty? %>
</div>

<div class="new-reply">
  <h3 class="new-reply-title">Reply</h3>
  <%= form_for [@forum, @post, Reply.new] do |f| %>
  <div class="field">
   <%= f.text_area :content, class: 'new-reply-content', placeholder: 'Reply content in here...' %>
  </div>
  <div class="actions">
    <%= f.submit 'Reply', class: 'btn btn-primary' %>
  </div>
  <% end %>
</div>
