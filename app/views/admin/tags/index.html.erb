<h1>Admin#tags</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Context</th>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
  <% @tags.each do |tag| %>
    <tr id="<%= tag.id %>-actions">
      <td><%= tag.context %></td>
      <td><%= tag.name %></td>
      <td><%= link_to 'Approve as Fandom', admin_tag_approve_path(tag, format: :js, as: 'fandoms'), remote: true, method: :put, class: 'approve' %></td>
      <td><%= link_to 'Approve as Character', admin_tag_approve_path(tag, format: :js, as: 'characters'), remote: true, method: :put, class: 'approve' %></td>
      <td><%= link_to 'Deny', admin_tag_deny_path(tag, format: :js), remote: true, method: :put, class: 'deny' %></td>
    </tr>
  <% end %>
  </tbody>
</table>
